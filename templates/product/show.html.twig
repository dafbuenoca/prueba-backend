{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
    <h1>Producto</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Id del Proveedor</th>
                <td>{{product.getProviderId().getId()}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('products') }}">Regresar</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">Editar</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}